package br.com.gerenciadorstudy.modelo;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

import br.com.gerenciadorstudy.servlet.Empresa;

public class Banco {

	private static List<Empresa> lista = new ArrayList<>();
	private static Integer chaveSequencial = 1;

	static {
		Empresa empresa2 = new Empresa();
		empresa2.setNome("Store JGomes");
		empresa2.setId(chaveSequencial++);
		lista.add(empresa2);
		Empresa empresa3 = new Empresa();
		empresa3.setNome("Store J.E");
		empresa3.setId(chaveSequencial++);
		lista.add(empresa3);
	}

	public void adiconar(Empresa empresa) {
		empresa.setId(Banco.chaveSequencial++);
		Banco.lista.add(empresa);
	}

	public static List<Empresa> getEmpresa() {
		return Banco.lista;
	}

	public void remove(Integer empresaId) {

		Iterator<Empresa> it = lista.iterator();

		while (it.hasNext()) {
			Empresa emp = it.next();

			if (emp.getId() == empresaId) {
				it.remove();
				//outra opção lista.remove(empresa); 
			}
		}

		// Quando utilizamos iteramos (Fazemos umalaço em uma lista) não conseguimos remover um valor
		/*
		 * for (Empresa empresa : lista) { if (empresa.getId() == empresaId) {
		 * lista.remove(empresa); }
		 * 
		 * }
		 */
	}

	public void atualizar(String nome, Empresa emp) {
		emp.setNome(nome);
	}

	public Empresa buscaEmpresaID(Integer id) {
		for (Empresa empresa : lista) {
			if(empresa.getId() == id) {
				return empresa;
			}
		}
		return null;
	}



}
